<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <% if current_user != @user  %>
    <%= form_with url: friendships_path, method: :post do |f| %>
      <%= f.hidden_field :friend_id, value: @user.id %>
      <%= f.submit 'Add Friend' %>
    <% end %>
  <% end %>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
